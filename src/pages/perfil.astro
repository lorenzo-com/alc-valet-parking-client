---
import Layout from "../layouts/Layout.astro";
import UserProfile from "../components/auth/UserProfile.svelte";
import { getLangFromUrl } from "../i18n/utils";

// Seguridad básica en servidor (opcional, ya que Svelte también protege)
// Si quieres redirección instantánea desde servidor, necesitarías cookies,
// pero con SPA/Svelte auth, es mejor dejar que el componente maneje la redirección.

const lang = getLangFromUrl(Astro.url);
---

<Layout title="Mi Perfil - ALC Valet Parking">
  <main class="bg-gray-100">
    <div class="container pt-5">
      <h1 class="fw-light">Zona de Cliente</h1>
      <p class="text-muted">Gestiona tus datos personales</p>
    </div>
    <UserProfile client:load />
  </main>
</Layout>
